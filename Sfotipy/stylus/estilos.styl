@import "normalize.styl"
gris_fosc = #333333
gris_clar = #818181
a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
//oocss classes
.container
	padding 1.4rem
	font-size 0
	text-align center
.border-bottom
	border-bottom 1px solid gris_clar
.name
	color gris_fosc
.menu
	display none
.relative
	position relative
.author
	color gris_clar
.header
	height 3.5em		
	.title
		font-size 1.1em		
		margin 0
		line-height 3.5
		text-align center
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

    